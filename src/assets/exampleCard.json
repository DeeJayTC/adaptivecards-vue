{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "type": "Input.Text",
            "placeholder": "Your family name...ff",
            "label": "Family Name",
            "isRequired": true,
            "errorMessage": "This field is required",
            "id": "familyname"
        },
        {
            "type": "Input.Text",
            "placeholder": "Placeholder text",
            "label": "Your first name...",
            "errorMessage": "This field is required",
            "isRequired": true,
            "id": "firstname"
        },
        {
            "type": "Input.Date",
            "label": "Date of birth",
            "min": "1.1.1940",
            "max": "31.1.2020",
            "isRequired": false,
            "id": "1234"
        },
        {
            "type": "Input.Text",
            "placeholder": "email@domain.com",
            "errorMessage": "Please enter a valid email address",
            "label": "Your Email",
            "isRequired": true,
            "id": "email"
        },
        {
            "type": "Input.Text",
            "placeholder": "Placeholder text",
            "label": "Password",
            "id": "pwd",
            "isRequired": true,
            "errorMessage": "1 Lower, 1 Upper, 1 Special and min 8 chars required",
            "regex": "(?=(.*[0-9]))(?=.*[\\!@#$%^&*()\\\\[\\]{}\\-_+=~`|:;\"'<>,./?])(?=.*[a-z])(?=(.*[A-Z]))(?=(.*)).{8,}"
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "Sign Up"
        }
    ]
}